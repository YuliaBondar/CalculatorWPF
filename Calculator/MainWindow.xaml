          HorizontalAlignment="Left" 
          Margin="10,359,0,0"
          Grid.Row="2" 
          VerticalAlignment="Top" 
          Width="423" 
          Height="35"
          ItemsSource="{Binding FunctionNames}"
          SelectedItem="{Binding SelectedFunction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


        <Button Content="." 
